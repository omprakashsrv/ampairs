# Ampairs Auth Module Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_at_least_256_bits

# OTP Configuration (Test/Development)
TEST_DEVELOPMENT_MODE=true
TEST_OTP=123456
ALLOW_HARDCODED_OTP=true

# reCAPTCHA Configuration
RECAPTCHA_ENABLED=true
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_MIN_SCORE=0.5

# Development Token Patterns (for bypassing reCAPTCHA)
RECAPTCHA_DEV_TOKEN_PATTERNS=dev-dummy-token-*,test-token-*

# Test Configuration
TEST_RECAPTCHA_TOKEN=test-token-12345

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region

# Production Security (recommended)
# Use AWS Secrets Manager, HashiCorp Vault, or similar instead of environment variables for production