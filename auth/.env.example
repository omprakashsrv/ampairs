# Ampairs Auth Module Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_at_least_256_bits

# OTP Configuration (Test/Development)
TEST_DEVELOPMENT_MODE=true
TEST_OTP=123456
ALLOW_HARDCODED_OTP=true

# reCAPTCHA Configuration
RECAPTCHA_ENABLED=true
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_MIN_SCORE=0.5

# Development Token Patterns (for bypassing reCAPTCHA)
RECAPTCHA_DEV_TOKEN_PATTERNS=dev-dummy-token-*,test-token-*

# Test Configuration
TEST_RECAPTCHA_TOKEN=test-token-12345

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true

# Authentication Endpoint Rate Limits
RATE_LIMIT_AUTH_INIT_CAPACITY=3
RATE_LIMIT_AUTH_INIT_WINDOW=5
RATE_LIMIT_AUTH_INIT_BURST=1

RATE_LIMIT_AUTH_VERIFY_CAPACITY=5
RATE_LIMIT_AUTH_VERIFY_WINDOW=5
RATE_LIMIT_AUTH_VERIFY_BURST=2

RATE_LIMIT_AUTH_REFRESH_CAPACITY=10
RATE_LIMIT_AUTH_REFRESH_WINDOW=1
RATE_LIMIT_AUTH_REFRESH_BURST=5

RATE_LIMIT_AUTH_LOGOUT_CAPACITY=5
RATE_LIMIT_AUTH_LOGOUT_WINDOW=1
RATE_LIMIT_AUTH_LOGOUT_BURST=3

RATE_LIMIT_AUTH_DEVICE_CAPACITY=10
RATE_LIMIT_AUTH_DEVICE_WINDOW=1
RATE_LIMIT_AUTH_DEVICE_BURST=5

# API Endpoint Rate Limits
RATE_LIMIT_API_AUTH_CAPACITY=100
RATE_LIMIT_API_AUTH_WINDOW=1
RATE_LIMIT_API_AUTH_BURST=20

RATE_LIMIT_API_PUBLIC_CAPACITY=50
RATE_LIMIT_API_PUBLIC_WINDOW=1
RATE_LIMIT_API_PUBLIC_BURST=10

# Global Rate Limits
RATE_LIMIT_GLOBAL_IP_CAPACITY=200
RATE_LIMIT_GLOBAL_IP_WINDOW=1
RATE_LIMIT_GLOBAL_IP_BURST=50

RATE_LIMIT_GLOBAL_USER_CAPACITY=150
RATE_LIMIT_GLOBAL_USER_WINDOW=1
RATE_LIMIT_GLOBAL_USER_BURST=30

# Production Security (recommended)
# Use AWS Secrets Manager, HashiCorp Vault, or similar instead of environment variables for production