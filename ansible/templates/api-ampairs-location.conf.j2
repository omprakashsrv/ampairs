location / {
    proxy_pass {{ app_upstream }};
    limit_req zone=ampairs_per_ip burst=10 nodelay;

    # File upload size limit (must match or exceed Spring Boot max-request-size)
    # Spring Boot default: max-file-size=10MB, max-request-size=15MB
    client_max_body_size {{ nginx_max_body_size }};

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    # Standard proxy headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Timeout settings for long-lived WebSocket connections
    proxy_read_timeout 86400s;
    proxy_send_timeout 86400s;
}
